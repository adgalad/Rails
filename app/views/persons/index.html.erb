
<table>
	<tr>
		<th> ID 		</th>
		<th> First Name </th>
		<th> Last Name 	</th>
		<th> Age 		</th>
		<th> Emails 	</th>
	</tr>
	
	<% @people.each do |person| %>
		<tr>
			<td> <%= person.id_number %>	</td>
			<td> <%= person.first_name %>	</td>
			<td> <%= person.last_name %>	</td>
			<td> <%= person.age %>			</td>
			
		</tr>
	<% end %>
	
</table>

<% if @people.size == 0 %>
	No person found.
<% end %>

<p> <%= link_to "Create", new_person_path %> </p>